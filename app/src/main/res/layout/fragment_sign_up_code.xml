<EditText
    android:id="@+id/lnl_entercode"
    android:layout_marginTop="36dp"
    app:layout_constraintTop_toBottomOf="@id/txv_we_will_send_code"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:maxLength="6"
    android:padding="4dp"
    android:inputType="number"
    />
    <TextView
        android:id="@+id/txv_resendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lnl_entercode"
        android:layout_marginTop="40dp"
        />
 <TextView
        android:id="@+id/txv_ask_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can ask to resend code after"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_resendCode"
        android:layout_marginTop="10dp"
        />
<TextView
        android:id="@+id/txv_timeto_resent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:48"
        android:layout_marginStart="8dp"
        android:textColor="@color/secondary_black"
        app:layout_constraintStart_toEndOf="@id/txv_ask_resend_code"
        app:layout_constraintTop_toBottomOf="@id/txv_resendCode"
        android:layout_marginTop="10dp"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="6dp"
        android:backgroundTint="@color/main"
        />

