<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signUp.SignUpFragmentCode">

    <FrameLayout
        android:id="@+id/frm_sign"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@color/second_yellow"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="@id/frm_sign">

        <TextView
            android:id="@+id/txv_signup_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/log_in"
            android:textColor="@color/secondary_black"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="88dp"
        android:layout_height="2dp"
        android:background="@color/secondary_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frm_sign"
       android:layout_marginStart="60dp"
        />
    <TextView
        android:id="@+id/txv_whats_your_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/frm_sign"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/secondary_black"
        android:text="@string/what_s_the_code"

        />
    <TextView
        android:id="@+id/txv_we_will_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txv_whats_your_number"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:text="Enter the code send to"
        />
    <TextView
        android:id="@+id/txv_phone_num_in_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/txv_we_will_send_code"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txv_whats_your_number"
        android:textSize="14sp"
        android:textColor="@color/secondary_black"
        android:text="+998 99-868-38-88"
        />
